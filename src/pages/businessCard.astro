<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ben Limmer - Business Card</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        background: #101623;
        font-family:
          system-ui,
          -apple-system,
          sans-serif;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <div class="business-card">
      <!-- Background with grid pattern (extends to bleed area) -->
      <div class="business-card-bg">
        <div class="hero-grid-bg"></div>
      </div>

      <!-- Content within safe area -->
      <div class="business-card-content">
        <div class="card-layout">
          <div class="main-content">
            <h1 class="name">Ben Limmer</h1>
            <p class="title">AI / DevEx / DevOps Consultant</p>
          </div>

          <div class="contact-section">
            <div class="contact-prefix-column">
              <span>hello@</span>
              <span>https://</span>
            </div>
            <div class="contact-main-column">
              <span>benlimmer.com</span>
              <span>benlimmer.com</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <style>
      .business-card {
        width: 100vw;
        height: 57.14vw; /* Maintains 3.5:2 aspect ratio (100/1.75) */
        max-height: 100vh;
        max-width: 175vh; /* Maintains aspect ratio when height-constrained */
        position: relative;
        overflow: hidden;
        background: #101623;
      }

      .business-card-bg {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
      }

      .hero-grid-bg {
        width: 100%;
        height: 100%;
        background-color: #101623;
        background-image:
          linear-gradient(to right, rgba(96, 165, 250, 0.15) 1px, transparent 1px),
          linear-gradient(to bottom, rgba(96, 165, 250, 0.15) 1px, transparent 1px);
        background-size: 2.86vw 2.86vw; /* Responsive grid size */
      }

      .business-card-content {
        position: absolute;
        width: 95.42857%; /* (3.34 / 3.5) * 100% */
        height: 92%; /* (1.84 / 2.0) * 100% */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        /* Removed old margin, width, height, padding:0 remains implied default */
      }

      .card-layout {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        gap: 4vw;
        width: 100%;
        height: 100%;
      }

      .main-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5vw;
      }

      .name {
        font-size: 11vw;
        font-weight: 700;
        color: #60a5fa;
        margin: 0;
        line-height: 0.9;
        letter-spacing: -0.02em;
        text-align: center;
      }

      .title {
        font-size: 3.7vw;
        font-weight: 500;
        color: #a1a1aa; /* zinc-400 */
        margin: 0;
        line-height: 1.2;
        text-align: center;
      }

      .contact-section {
        display: grid;
        grid-template-columns: auto auto; /* prefix column, main content column */
        column-gap: 4px; /* Gap between prefix and main text */
        align-items: baseline; /* Align text baselines */
        margin: 0 auto; /* Center the section if card-layout is wider */
        width: fit-content; /* Make the grid only as wide as necessary */
        font-family: "SF Mono", "Monaco", "Inconsolata", "Roboto Mono", "Consolas", monospace;
        font-size: 3.5vw;
        font-weight: 600;
      }

      .contact-prefix-column {
        display: flex;
        flex-direction: column;
        align-items: flex-end; /* Right-aligns prefixes */
        gap: 1vw; /* Matches parent row-gap for consistent spacing */
      }

      .contact-prefix-column span {
        color: #a1a1aa; /* zinc-400, same as title for visual hierarchy */
      }

      .contact-main-column {
        display: flex;
        flex-direction: column;
        align-items: flex-start; /* Left-aligns main contact info */
        gap: 1vw; /* Matches parent row-gap */
      }

      .contact-main-column span {
        color: #e5e7eb; /* gray-200 */
      }

      /* Print optimization */
      @media print {
        body {
          margin: 0;
          padding: 0;
        }

        .business-card {
          margin: 0;
          box-shadow: none;
        }
      }
    </style>
  </body>
</html>
