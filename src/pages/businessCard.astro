<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ben Limmer - Business Card</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        background: #101623;
        font-family:
          system-ui,
          -apple-system,
          sans-serif;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <div class="business-card">
      <!-- Background with grid pattern (extends to bleed area) -->
      <div class="business-card-bg">
        <div class="hero-grid-bg"></div>
      </div>

      <!-- Content within safe area -->
      <div class="business-card-content">
        <div class="card-layout">
          <div class="main-content">
            <h1 class="name">Ben Limmer</h1>
            <p class="title">AI / DevEx / DevOps Consultant</p>
          </div>

          <div class="contact-section">
            <div class="contact-item">hello@benlimmer.com</div>
            <div class="contact-item">https://benlimmer.com</div>
          </div>
        </div>
      </div>
    </div>

    <style>
      .business-card {
        width: 100vw;
        height: 57.14vw; /* Maintains 3.5:2 aspect ratio (100/1.75) */
        max-height: 100vh;
        max-width: 175vh; /* Maintains aspect ratio when height-constrained */
        position: relative;
        overflow: hidden;
        background: #101623;
      }

      .business-card-bg {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
      }

      .hero-grid-bg {
        width: 100%;
        height: 100%;
        background-color: #101623;
        background-image:
          linear-gradient(to right, rgba(96, 165, 250, 0.15) 1px, transparent 1px),
          linear-gradient(to bottom, rgba(96, 165, 250, 0.15) 1px, transparent 1px);
        background-size: 2.86vw 2.86vw; /* Responsive grid size */
      }

      .business-card-content {
        position: relative;
        z-index: 10;
        height: 100%;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        /* Safe area margins based on Moo specs: 3.34" x 1.84" safe area from 3.5" x 2" */
        margin: 8.6vw 4.6vw; /* Top/bottom: (2-1.84)/2 = 0.08"/2" = 4% of height, Left/right: (3.5-3.34)/2 = 0.08"/3.5" = 2.3% of width */
        width: calc(100% - 9.2vw);
        height: calc(100% - 17.2vw);
      }

      .card-layout {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        gap: 4vw;
        width: 100%;
        height: 100%;
      }

      .main-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5vw;
      }

      .name {
        font-size: 11vw;
        font-weight: 700;
        color: #60a5fa;
        margin: 0;
        line-height: 0.9;
        letter-spacing: -0.02em;
        text-align: center;
      }

      .title {
        font-size: 3.7vw;
        font-weight: 500;
        color: #a1a1aa;
        margin: 0;
        line-height: 1.2;
        text-align: center;
      }

      .contact-section {
        display: flex;
        flex-direction: column;
        gap: 1vw;
        text-align: center;
        align-items: center;
      }

      .contact-item {
        font-size: 3.5vw;
        font-weight: 600;
        color: #e5e7eb;
        font-family: "SF Mono", "Monaco", "Inconsolata", "Roboto Mono", "Consolas", monospace;
        text-align: center;
      }

      /* Print optimization */
      @media print {
        body {
          margin: 0;
          padding: 0;
        }

        .business-card {
          margin: 0;
          box-shadow: none;
        }
      }
    </style>
  </body>
</html>
