---
export interface Props {
  emoji: string;
  headline: string;
  description: string;
}
const { emoji, headline, description } = Astro.props;
---

<div
  class="mb-8 flex min-h-[240px] flex-col items-stretch gap-8 rounded-2xl border border-white/10 bg-white/5 p-8 shadow-sm sm:flex-row md:min-h-[260px]"
>
  <div class="flex w-full flex-shrink-0 flex-grow-0 flex-col items-center justify-center sm:w-1/4">
    <span class="mb-2 text-2xl sm:text-3xl md:text-4xl lg:text-5xl" aria-hidden="true">{emoji}</span>
    <h3 class="mt-1 text-center text-base leading-tight font-semibold break-words text-white md:text-lg lg:text-xl">
      {headline}
    </h3>
  </div>
  <div class="mx-8 hidden w-px bg-white/20 sm:block" aria-hidden="true"></div>
  <div class="flex flex-1 items-center text-base leading-relaxed text-white/80 sm:ml-0 md:text-lg lg:text-xl">
    <span class="prose" set:html={description} />
  </div>
</div>
