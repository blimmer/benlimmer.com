---
interface Props {
  id?: string;
  title?: string;
  description?: string;
  children: any;
}

const { id, title, description, children } = Astro.props;
---

<section class="bg-primary text-white py-20 flex flex-col items-center" id={id}>
  {title && <h2 class="text-3xl md:text-4xl font-bold mb-4 text-blue-300">{title}</h2>}
  {description && <p class="text-center max-w-2xl mb-10 text-white/80">{description}</p>}
  <slot />
</section>
